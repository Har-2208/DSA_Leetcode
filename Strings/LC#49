/**
 * Return an array of arrays of size *returnSize.
 * The sizes of the arrays are returned as *returnColumnSizes array.
 * Note: Both returned array and *columnSizes array must be malloced, assume caller calls free().
 */

#include <stdio.h>
#include <stdlib.h>
#include <string.h>

 void sortString(char* s) {
    int n = strlen(s);
    for (int i = 0; i < n - 1; i++) {
        for (int j = i + 1; j < n; j++) {
            if (s[i] > s[j]) {
                char temp = s[i];
                s[i] = s[j];
                s[j] = temp;
            }
        }
    }
}



    

char*** groupAnagrams(char** strs, int strsSize, int* returnSize, int** returnColumnSizes) {
    char*** result = (char***)malloc(strsSize * sizeof(char**));
    char** keys = (char**)malloc(strsSize * sizeof(char*));
    *returnColumnSizes = (int*)malloc(strsSize * sizeof(int));

    int groups = 0;

    for (int i = 0; i < strsSize; i++) {
        char* temp = strdup(strs[i]);
        sortString(temp);

        int found = -1;

        for (int j = 0; j < groups; j++) {
            if (strcmp(keys[j], temp) == 0) {
                found = j;
                break;
            }
        }

        if (found == -1) {
            keys[groups] = temp;
            result[groups] = (char**)malloc(strsSize * sizeof(char*));
            result[groups][0] = strs[i];
            (*returnColumnSizes)[groups] = 1;
            groups++;
        } else {
            int idx = (*returnColumnSizes)[found];
            result[found][idx] = strs[i];
            (*returnColumnSizes)[found]++;
            free(temp);
        }
    }

    *returnSize = groups;
    return result;
}

