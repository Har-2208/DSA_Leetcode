#include<string.h>
#include<stdbool.h>
#include<ctype.h>

bool isPalindrome(char* s) {
    int flag = 0;
    int j=0, i=0;

    while(s[i]!='\0'){
        if(isalnum((unsigned char)s[i])){
            s[j] = s[i];
            j++;
        }
        i++;
    }
    s[j] = '\0';

   
    int size = strlen(s);

     for(int i=0; i<size; i++){
        s[i] = tolower((unsigned char)s[i]);
    }

   for (int i = 0; i < size / 2; i++) {
        if (s[i] != s[size-1- i]) {
        flag = 1;
        break;
    }
}

    if(s==" "){
        flag = 0;
    }

    if(flag==0){
        return true;
    }
    else{
        return false;
    }
}